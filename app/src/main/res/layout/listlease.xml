<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/oneleasetextView"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:text="one"/>

        <TextView
            android:id="@+id/twoleaselisttextView"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="right"
            android:text="two"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/unitnbrtextView"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:text="Number of units"/>

        <TextView
            android:id="@+id/unitnbrlist"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="right"
            android:text="Number of units"/>
        <TextView
            android:id="@+id/floornbrtextView"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:text="Number of floors"/>

        <TextView
            android:id="@+id/floornbrlist"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="right"
            android:text="Number of floors"/>
    </LinearLayout>

</LinearLayout>