<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/buildingaddresstextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Building address"/>
    <Spinner
        android:id="@+id/buildingspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/numbertextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit Number"/>
    <EditText
        android:id="@+id/unitnumbereditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Unit Number"/>

    <TextView
        android:id="@+id/floortextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit Floor"/>

    <!--<EditText-->
        <!--android:id="@+id/unitflooreditText"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"-->
        <!--android:hint="Unit Floor"-->
        <!--android:inputType="number"/>-->

    <Spinner
        android:id="@+id/floorspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/addunitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Unit"/>
</LinearLayout>